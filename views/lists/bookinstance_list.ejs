<% layout('../layout') -%>
<div class="row">
  <div class="col-sm-12">
    <h1><%= title %></h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Book</th>
          <th scope="col">status</th>
          <th scope="col">due back</th>
        </tr>
      </thead>
      <tbody>
        <% bookinstance_list.forEach(function(bookinstance) { %>
          <tr onclick="window.location='<%= bookinstance.url %>';">
             <td><%= bookinstance.book.title %></td>
             <td><%= bookinstance.status %></td>
             <td>
               <%if (bookinstance.status != "Available") { %>
                 <%= bookinstance.due_back_formatted %>
               <% }else{ %>
                 n/a
               <% } %>
             </td>
           </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
